<head>
    <meta charset="utf-8" />
    <title>Klokkeslettest</title>
    <script>
        window.onload = oppdater;

        function oppdater() {
            let tid = new Date ();
            document.getElementById("Klokkeutskrift").innerHTML = tid.getHours() + ":" + tid.getMinutes() + ":" + tid.getSeconds();
        setTimeout (oppdater, 1000);
        }
    </script>
</head>
